{
    "name": "workspace-manager",
    "displayName": "Workspace Manager",
    "description": "Workspace manager for Visual Studio Code",
    "version": "1.3.1",
    "publisher": "design4pro",
    "icon": "resources/workspace.png",
    "homepage": "https://github.com/design4pro/vscode-workspace-manager",
    "repository": {
        "type": "git",
        "url": "https://github.com/design4pro/vscode-workspace-manager.git"
    },
    "bugs": {
        "url": "https://github.com/design4pro/vscode-workspace-manager/issues",
        "email": "workspace-manager@design4.pro"
    },
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "workspace",
        "save",
        "manager",
        "switch"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "yarn run clean && yarn run compile",
        "vsce:publish": "npx vsce publish --yarn",
        "vsce:package": "npx vsce package --yarn",
        "clean": "rimraf out/** && rimraf package.nls.*.json && rimraf workspace-manager-*.vsix",
        "compile": "webpack --mode production",
        "watch": "webpack --mode none --watch",
        "commit": "commit",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "yarn run test:compile",
        "test:compile": "tsc -p ./ && yarn run compile",
        "release": "npx semantic-release"
    },
    "dependencies": {
        "applicationinsights": "1.4.1",
        "fast-glob": "3.0.4",
        "lodash": "4.17.15",
        "mkdirp": "0.5.1",
        "uuid": "3.3.2",
        "verror": "1.10.0",
        "vscode-nls": "4.1.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.1.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@commitlint/prompt-cli": "^8.0.0",
        "@semantic-release/changelog": "^3.0.4",
        "@semantic-release/git": "^7.0.12",
        "@types/lodash": "^4.14.134",
        "@types/mkdirp": "^0.5.2",
        "@types/mocha": "^2.2.42",
        "@types/node": "12.6.2",
        "@types/uuid": "^3.4.5",
        "@types/verror": "^1.10.3",
        "husky": "^2.4.1",
        "lint-staged": "^9.2.5",
        "prettier": "^1.18.2",
        "rimraf": "^2.6.3",
        "semantic-release": "^15.13.16",
        "semantic-release-vsce": "^2.2.8",
        "ts-loader": "^6.0.4",
        "typescript": "^3.3.1",
        "vscode": "^1.1.36",
        "vscode-nls-dev": "^3.3.1",
        "webpack": "^4.39.2",
        "webpack-cli": "^3.3.6"
    },
    "lint-staged": {
        "*": [
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Workspace Manager",
            "properties": {
                "workspace-manager.advanced.codeExecutable": {
                    "type": "string",
                    "default": "code",
                    "description": "Path to the executable file for VS Code."
                },
                "workspace-manager.advanced.codeInsidersExecutable": {
                    "type": "string",
                    "default": "code-insiders",
                    "description": "Path to the executable file for VS Code Insiders."
                },
                "workspace-manager.advanced.deep": {
                    "type": "number",
                    "default": "5",
                    "description": "The maximum depth of a read directory relative to the start directory."
                },
                "workspace-manager.advanced.excludeGlobPattern": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "A glob pattern that defines files and folders to exclude. `node_modules` directory is ignored by default."
                },
                "workspace-manager.includeGlobPattern": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "~/**/*"
                    ],
                    "description": "Paths of directories when `.code-workspace` files can be saved and then read from. You do not need to use `**/*` at the end."
                },
                "workspace-manager.showInActivityBar": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether or not to show the activity bar tree view container."
                },
                "workspace-manager.showInExplorer": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether or not to show the list of workspaces in the explorer tree view container"
                }
            }
        },
        "commands": [
            {
                "command": "workspaceManager.saveWorkspace",
                "title": "Workspace Manager: Save Workspace",
                "icon": {
                    "light": "resources/light/save.svg",
                    "dark": "resources/dark/save.svg"
                }
            },
            {
                "command": "workspaceManager.switchWorkspace",
                "title": "Workspace Manager: Switch Workspace"
            },
            {
                "command": "workspaceManager.switchWorkspaceInNewWindow",
                "title": "Workspace Manager: Switch Workspace in New Window",
                "icon": {
                    "light": "resources/light/new-window.svg",
                    "dark": "resources/dark/new-window.svg"
                }
            },
            {
                "command": "workspaceManager.deleteWorkspace",
                "title": "Workspace Manager: Delete Workspace",
                "icon": {
                    "light": "resources/light/delete.svg",
                    "dark": "resources/dark/delete.svg"
                }
            },
            {
                "command": "workspaceManager.refreshTreeData",
                "title": "Workspace Manager: Reload Workspaces",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "workspaceManager.closeWorkspace",
                "title": "Workspace Manager: Close Workspace",
                "icon": {
                    "light": "resources/light/close.svg",
                    "dark": "resources/dark/close.svg"
                }
            },
            {
                "command": "workspaceManager.cacheWorkspace",
                "title": "Workspace Manager: Cache Workspace"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "workspaceManager",
                    "title": "Workspace Manager",
                    "icon": "resources/workspace.svg",
                    "when": "workspace-manager:enabled && !workspace-manager:empty"
                }
            ]
        },
        "views": {
            "workspaceManager": [
                {
                    "id": "workspaceManager.views.workspaceManager",
                    "name": "Workspaces",
                    "when": "workspace-manager:enabled && workspace-manager:viewInActivityBarShow && !workspace-manager:empty"
                }
            ],
            "explorer": [
                {
                    "id": "workspaceManager.views.explorer",
                    "name": "Workspaces",
                    "when": "workspace-manager:enabled && workspace-manager:viewInExplorerShow && !workspace-manager:empty"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "workspaceManager.saveWorkspace",
                    "when": "view =~ /^workspaceManager\\.views\\.workspaceManager/",
                    "group": "navigation@1"
                },
                {
                    "command": "workspaceManager.refreshTreeData",
                    "when": "view =~ /^workspaceManager\\.views\\.workspaceManager/",
                    "group": "navigation@2"
                },
                {
                    "command": "workspaceManager.closeWorkspace",
                    "when": "view =~ /^workspaceManager\\.views\\.workspaceManager/",
                    "group": "navigation@3"
                },
                {
                    "command": "workspaceManager.saveWorkspace",
                    "when": "view =~ /^workspaceManager\\.views\\.explorer/",
                    "group": "navigation@1"
                },
                {
                    "command": "workspaceManager.refreshTreeData",
                    "when": "view =~ /^workspaceManager\\.views\\.explorer/",
                    "group": "navigation@2"
                },
                {
                    "command": "workspaceManager.closeWorkspace",
                    "when": "view =~ /^workspaceManager\\.views\\.explorer/",
                    "group": "navigation@3"
                }
            ],
            "view/item/context": [
                {
                    "command": "workspaceManager.switchWorkspaceInNewWindow",
                    "when": "view =~ /^workspaceManager\\.views\\.workspaceManager/",
                    "group": "inline@1"
                },
                {
                    "command": "workspaceManager.deleteWorkspace",
                    "when": "view =~ /^workspaceManager\\.views\\.workspaceManager/",
                    "group": "inline@2"
                },
                {
                    "command": "workspaceManager.switchWorkspaceInNewWindow",
                    "when": "view =~ /^workspaceManager\\.views\\.explorer/",
                    "group": "inline@1"
                },
                {
                    "command": "workspaceManager.deleteWorkspace",
                    "when": "view =~ /^workspaceManager\\.views\\.explorer/",
                    "group": "inline@2"
                }
            ]
        },
        "keybindings": [
            {
                "command": "workspaceManager.saveWorkspace",
                "key": "ctrl-k shift-w"
            },
            {
                "command": "workspaceManager.switchWorkspace",
                "key": "shift+alt+p",
                "mac": "cmd+alt+p"
            },
            {
                "command": "workspaceManager.switchWorkspaceInNewWindow",
                "key": "ctrl-k ctrl-w"
            }
        ]
    }
}
